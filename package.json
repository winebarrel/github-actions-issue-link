{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run clean && tsc && vite build",
    "zip": "npm run build && cd dist && zip -r ../github-actions-issue-link.zip .",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "watch": "npm-watch",
    "clean": "rm -rf dist github-actions-issue-link.zip"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "manifest.json"
      ],
      "extensions": "ts,json"
    }
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@types/chrome": "^0.1.1",
    "npm-watch": "^0.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  }
}
