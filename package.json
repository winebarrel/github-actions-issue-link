{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run clean && tsc && vite build",
    "zip": "npm run build && cd dist && zip -r ../github-actions-issue-link.zip .",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "watch": "npm-watch",
    "clean": "rm -rf dist github-actions-issue-link.zip"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "manifest.json"
      ],
      "extensions": "ts,json"
    }
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.16",
    "@types/chrome": "^0.0.234",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.3.1"
  }
}
